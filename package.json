{
  "name": "supermart_backend",
  "version": "1.0.0",
  "description": "A Restful Backend made using Node's Express Framework written in Typescript",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node --unhandled-rejections=strict ./dist/app.js",
    "build": "tsc",
    "test:users": "cross-env NODE_ENV=development mocha -r ts-node/register --colors 'src/tests/integration/users/*.test.ts' --unhandled-rejections=strict",
    "test:categories": "cross-env NODE_ENV=development mocha -r ts-node/register --colors 'src/tests/integration/categories/*.test.ts' --unhandled-rejections=strict",
    "test:subcategories": "cross-env NODE_ENV=development mocha -r ts-node/register --colors 'src/tests/integration/subcategories/*.test.ts' --unhandled-rejections=strict",
    "test:orders": "cross-env NODE_ENV=development mocha -r ts-node/register --colors 'src/tests/integration/orders/*.test.ts' --unhandled-rejections=strict",
    "unittest:productmodel": "cross-env NODE_ENV=development mocha -r ts-node/register --colors 'src/tests/unit/product/dao/*.test.ts' --unhandled-rejections=strict",
    "test:all": "npm run test:users && npm run test:categories && npm run test:subcategories && npm run unittest:productmodel && npm run test:orders",
    "debug": "export DEBUG=* && npm run start",
    "prettier:manual": "npx prettier --config .prettierrc.json --write src/**/*.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/argon2": "^0.15.0",
    "@types/chai": "^4.2.19",
    "@types/cors": "^2.8.10",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/express-slow-down": "^1.3.1",
    "@types/jsonwebtoken": "^8.5.3",
    "@types/mocha": "^8.2.2",
    "@types/nodemailer": "^6.4.4",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.7",
    "prettier": "2.3.0",
    "rewire": "^6.0.0",
    "sinon": "^13.0.1",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "argon2": "^0.28.2",
    "cors": "^2.8.5",
    "debug": "^3.2.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-slow-down": "^1.4.0",
    "express-validator": "^6.12.0",
    "express-winston": "^4.1.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.0",
    "nodemailer": "^6.6.3",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
