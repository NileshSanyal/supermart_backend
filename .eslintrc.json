{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": 0,
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            {
                "anonymous": "ignore",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ]
    }
}